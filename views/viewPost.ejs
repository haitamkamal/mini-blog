<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
    <a href="/Home">X</a>
     <h1>All Posts</h1>
<ul>
  <% posts.forEach(post => { %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <% if (post.image) { %>
        <img src="/uploads/<%= post.image %>" alt="Post Image" width="200">
        <form action="/deleteMsg/<%= post.id%>" method="post" >


              <button type="submit" >delete</button>
        </form>
      <% } %>
    </li>
  <% }); %>
  
</ul>
   
</body>
</html>